<script>
  // Function to directly navigate to a specific step
  function goToStep(stepNum) {
    console.log('Moving to step:', stepNum); // Debugging line
    // Hide all steps and remove current class from all nav links
    var allSteps = document.getElementsByClassName('card__content');
    var allNavLinks = document.querySelectorAll('.progress__link');
    for (var i = 0; i < allSteps.length; i++) {
      allSteps[i].style.display = 'none';
      allNavLinks[i].classList.remove('progress__link--current');
    }

    // Show the specified step and highlight the corresponding nav link
    var stepToShow = document.getElementById('step' + stepNum);
    var navLinkToHighlight = document.getElementById('navStep' + stepNum);
    if (stepToShow && navLinkToHighlight) {
      stepToShow.style.display = 'block';
      navLinkToHighlight.classList.add('progress__link--current');
    } else {
      console.error('Failed to find elements for step:', stepNum); // Debugging line
    }
  }

  // Add event listeners to the navigation links
  document.addEventListener('DOMContentLoaded', function () {
    // Initialize the first step
    goToStep(1);

    // Setup click event for each nav link
    var navLinks = document.querySelectorAll('.progress__link');
    navLinks.forEach(function (link, index) {
      link.addEventListener('click', function (event) {
        event.preventDefault(); // Prevent the default anchor behavior
        goToStep(index + 1); // Index is 0-based; steps are 1-based
      });
    });
  });
</script>
